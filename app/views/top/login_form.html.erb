<h1>ログイン</h1>

<%= form_with url: top_login_path, method: :post, local: true do |f| %>
  <%= f.label :uid, 'ユーザーID' %>
  <%= f.text_field :uid %>
  <%= f.label :pass, 'パスワード' %>
  <%= f.password_field :pass %>
  <%= f.submit 'ログイン' %>
<% end %>
